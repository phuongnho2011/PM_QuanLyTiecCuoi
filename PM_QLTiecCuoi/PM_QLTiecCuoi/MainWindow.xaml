            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="15*"></RowDefinition>
        </Grid.RowDefinitions>

                
        <Border BorderBrush="Black" BorderThickness="2">
        <Grid Grid.Row ="0">
